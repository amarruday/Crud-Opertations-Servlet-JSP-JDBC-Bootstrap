CREATE TABLE `inventory_management_systemdb`.`ims_customer` (
  `customer_id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `customer_firstName` VARCHAR(45) NOT NULL,
  `customer_lastName` VARCHAR(45) NOT NULL,
  `customer_address` VARCHAR(200) NOT NULL,
  `customer_email` VARCHAR(45) NOT NULL,
  `customer_mobileNumber` VARCHAR(12) NOT NULL,
  `customer_status` VARCHAR(10) NOT NULL DEFAULT 'Active',
  `customer_addedDate` TIMESTAMP NOT NULL,
  PRIMARY KEY (`customer_id`)
)
ENGINE = InnoDB;